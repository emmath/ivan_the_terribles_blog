<p id="notice"><%= notice %></p>


  <h2><%= @post.title %></h2>
  <p><%= @post.body %></p>


<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>

  <h3>Comment</h3>

  <% @post.comments.each do |comment| %>
    <p><%= comment.body %></p>

      <h4>Reply</h4>
      <% comment.replies.each do |reply| %>
          <p><%= reply.body %></p>
      <% end %>
  <% end %>

